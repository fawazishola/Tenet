// Cost comparison: Different founder signals
var cost_pitch_deck = 10;       // Anyone can make a deck
var cost_business_plan = 20;    // Requires some research
var cost_mvp_nocode = 40;       // Requires execution
var cost_mvp_code = 70;         // Requires technical skill
var cost_build_dsl = 100;       // Requires deep CS knowledge

print "SIGNAL COSTS (Effort Units):";
print "  Pitch Deck:         10 (anyone can do this)";
print "  Business Plan:      20 (requires research)";
print "  No-Code MVP:        40 (requires execution)";
print "  Coded MVP:          70 (requires technical skill)";
print "  Build a DSL:        100 (requires compiler knowledge)";
print "";

game FounderSignalingGame {
    players TechFounder, NonTechFounder
    strategies BuildDSL, BuildMVP, WritePlan, MakeDeck
    
    // Payoffs represent probability of getting funded * valuation
    // TechFounder can produce all signals; NonTechFounder cannot build DSL
    
    payoff TechFounder {
        (BuildDSL, MakeDeck): 95         // Separating equilibrium
        (BuildDSL, WritePlan): 90        // Still separated
        (BuildMVP, BuildMVP): 60         // Pooling - both can do this
        (WritePlan, WritePlan): 30       // Pooling - indistinguishable
        (MakeDeck, MakeDeck): 20         // Pooling - no differentiation
    }
    
    payoff NonTechFounder {
        (BuildDSL, MakeDeck): 0          // Cannot produce this signal
        (BuildDSL, WritePlan): 0         // Cannot produce this signal
        (BuildMVP, BuildMVP): 60         // Can compete here
        (WritePlan, WritePlan): 30       // Can compete here
        (MakeDeck, MakeDeck): 20         // Can compete here
    }
}

print "THE GAME:";
solve FounderSignalingGame;

