game CompoundingAdvantage {
    players YoungFounder, ExperiencedFounder
    strategies StartNow, WaitForExperience
    
    // Starting value (arbitrary units of capability/output)
    // Payoffs represent lifetime expected value
    
    payoff YoungFounder {
        (StartNow, StartNow): 268        // Full 41-year compound
        (StartNow, WaitForExperience): 268  // Irrelevant - years don't wait
        (WaitForExperience, StartNow): 100  // Waited 10 years, only 31 left
    }
    
    payoff ExperiencedFounder {
        (StartNow, StartNow): 33         // 25-year compound
        (StartNow, WaitForExperience): 33  // They started regardless
        (WaitForExperience, StartNow): 33  // Same - can't get younger
    }
}

print "THE COMPOUNDING GAME:";
solve CompoundingAdvantage;

