game ProblemSolvingCapability {
    players MechanismDesigner, ToolUser
    strategies DesignNew, UseExisting, NovelProblem, KnownProblem
    
    // When problems are KNOWN, tool users are fine
    // When problems are NOVEL, only mechanism designers succeed
    
    payoff MechanismDesigner {
        (DesignNew, NovelProblem): 100     // This is where value is created
        (DesignNew, KnownProblem): 70      // Overkill but works
        (UseExisting, NovelProblem): 20    // Struggles with adaptation
        (UseExisting, KnownProblem): 60    // Fine for commodity work
    }
    
    payoff ToolUser {
        (DesignNew, NovelProblem): 0       // Cannot do this
        (DesignNew, KnownProblem): 0       // Cannot do this
        (UseExisting, NovelProblem): 30    // Patches together solutions
        (UseExisting, KnownProblem): 80    // Actually optimal here
    }
}

print "THE CAPABILITY GAME:";
solve ProblemSolvingCapability;

