game InvestorScreening {
    players Investor, Founder
    strategies ScreenHard, ScreenLight, PassAll, PassSome, Fail
    
    // Investors want to find "real" founders and filter "pretenders"
    // Hard screens catch more pretenders but might miss good founders
    // Light screens are faster but let more noise through
    
    payoff Investor {
        (ScreenHard, PassAll): 100       // Found a real one
        (ScreenHard, PassSome): 30       // Founder has gaps
        (ScreenHard, Fail): 10           // Correctly filtered
        (ScreenLight, PassAll): 70       // Might have missed issues
        (ScreenLight, PassSome): 50      // Average case
        (ScreenLight, Fail): -50         // Missed red flags
    }
    
    payoff Founder {
        (ScreenHard, PassAll): 100       // Proven beyond doubt
        (ScreenHard, PassSome): 40       // Gaps exposed
        (ScreenHard, Fail): 0            // Rejected
        (ScreenLight, PassAll): 80       // Quick win
        (ScreenLight, PassSome): 60      // Got through
        (ScreenLight, Fail): 20          // Might retry elsewhere
    }
}

print "THE SCREENING GAME:";
solve InvestorScreening;

